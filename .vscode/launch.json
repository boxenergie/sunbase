    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-P",
                "${workspaceFolder}\\tsconfig.json"
            ],
            "args": [
                "${workspaceFolder}\\src\\server.ts"
            ]
        },
        {
            "name": "Docker Node.js Launch and Attach",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node"
        }
    ]
}